{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["server/src/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/dist/server.js"
    }
  ],
  "functions": {
    "server/src/server.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}